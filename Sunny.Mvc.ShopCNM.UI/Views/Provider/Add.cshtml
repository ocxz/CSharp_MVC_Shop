@model IEnumerable<Sunny.Mvc.ShopCNM.Model.Address>
<div class="location">
    <strong>你现在所在的位置是:</strong>
    <span>供应商管理页面 >> 供应商添加页面</span>
</div>

<div class="providerAdd">
    <form method="post">
        <!--div的class 为error是验证错误，ok是验证成功-->
        <div>
            <label for="providerName">供应商名称：</label>
            <input type="text" name="PName" id="providerName" data-val="true" data-val-required="*请输入供应商名称" />
            <span data-valmsg-for="PName" data-valmsg-replace="true"></span>
        </div>
        <div>
            <label for="people">联系人：</label>
            <input type="text" name="LinkMan" id="people" data-val="true" data-val-regex="*名称格式不正确" data-val-regex-pattern="^[\u4e00-\u9fa5]{2,10}$" data-val-required="*请输入联系人名称" />
            <span data-valmsg-for="LinkMan" data-valmsg-replace="true"></span>

        </div>
        <div>
            <label for="phone">联系电话：</label>
            <input type="text" name="LinkPhone" id="phone" data-val="true" data-val-regex="*手机号格式不正确" data-val-regex-pattern="^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$" data-val-required="*请输入联系人手机号码" />
            <span data-valmsg-for="LinkPhone" data-valmsg-replace="true"></span>
        </div>
        <div>
            <label for="userAddress">联系地址：</label>
            <select id="UPro" name="UPro" style="width:100px">
                <option value="110000">北京市</option>
            </select>
            -
            <select id="UCity" name="UCity" style="width:100px">
                <option value="110100">北京市</option>
            </select>
            -
            <select id="UCounty" name="UCounty" style="width:100px">
                <option value="110101">东城区</option>
            </select>
            -
            <input type="text" name="LinkAddress" id="userAddress" />
        </div>
        <div>
            <label for="fax">传真：</label>
            <input type="text" name="Fax" id="fax" data-val="true" data-val-regex="*传真格式不正确" data-val-regex-pattern="^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$" />
            <span data-valmsg-for="Fax" data-valmsg-replace="true"></span>
        </div>
        <div>
            <label for="describe">描述：</label>
            <input type="text" name="Detial" id="describe" />
        </div>
        <div class="providerAddBtn">
            <!--<a href="#">保存</a>-->
            <!--<a href="userList.html">返回</a>-->
            <input type="button" value="保存" submit="true" />
            <input type="button" value="返回" onclick="history.back(-1)" />
        </div>
    </form>
</div>
@section script{
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/js.js"></script>
}

